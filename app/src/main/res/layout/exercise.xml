            android:paddingTop="0dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:id="@+id/FitnessQty_lbl"
                android:layout_below="@+id/FitnessQty_txt"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Qty"
