                android:id="@+id/FitnessExercise_lbl"
                android:layout_below="@+id/FitnessExercise_txt"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Exercise"
                android:textAlignment="center"
                android:layout_gravity="bottom" />

    </LinearLayout>
-->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/FitnessSave_btn"
        android:height="100dp"
        android:width="160dp"
        android:textSize="30dp"
        android:layout_below="@+id/FitnessQty_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textAllCaps="false" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitness Stats"
        android:id="@+id/FitnessStats_btn"
        android:height="100dp"
        android:width="160dp"
        android:textSize="30dp"
        android:layout_below="@+id/FitnessSave_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:textAllCaps="false"/>
    <!--android:drawableLeft="@drawable/fitnessstats"-->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prescription"
        android:id="@+id/FitnessScript_btn"
        android:height="100dp"
        android:width="160dp"
        android:textSize="30dp"
        android:layout_below="@+id/Fitnessbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:drawableLeft="@drawable/script"
        android:textAllCaps="false"/>


</LinearLayout>
