<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NutritionActivity">

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:orientation="vertical"
        android:useDefaultMargins="false">

            <TextView
                android:id="@+id/DateFrom_lbl"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="From: "
                android:textSize="20sp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center_vertical|right" />
            <Button
                android:text="Select Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:onClick="showDatePickerDialog"
                android:id="@+id/dateFrom_btn"
                android:layout_column="1"
                android:layout_row="0"
                android:textSize="20sp"
                android:minWidth="250dp" />

            <Button
                android:id="@+id/timeFrom_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="Select Time"
                android:onClick="showTimePickerDialog"
                android:layout_column="1"
                android:layout_row="1"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/DateTo_lbl"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="To: "
                android:textSize="20sp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_gravity="center_vertical|right" />
            <Button
                android:id="@+id/dateTo_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="Select Date"
                android:onClick="showDatePickerDialog"
                android:layout_column="1"
                android:layout_row="2"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/timeTo_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="Select Time"
                android:onClick="showTimePickerDialog"
                android:layout_column="1"
                android:layout_row="3"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/freq_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="Frequency"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="4"
                android:textAllCaps="false"/>
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/NutritionScriptQty_txt"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:inputType="number"
            android:ems="10"
            android:background="@android:color/background_light"
            android:layout_gravity="right"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:hint="Qty"
            android:textColorHint="@color/abc_secondary_text_material_light"
            android:imeOptions="actionDone"
            android:lines="1">
        </EditText>

        <EditText
            android:id="@+id/NutritionScript_txt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:hint="Food"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:lines="1"
            android:textColorHint="@color/abc_secondary_text_material_light"
            android:imeOptions="actionDone">
            <requestFocus />
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/FoodinServings_lbl"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/NutritionQty_txt"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="in servings"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/NutritionScriptSave_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:height="60dp"
        android:width="160dp"
        android:textSize="20dp"
        android:layout_below="@+id/NutritionScript_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:drawableLeft="@drawable/save"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/NutritionScriptEdit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View/Edit"
        android:height="60dp"
        android:width="160dp"
        android:textSize="20dp"
        android:layout_below="@+id/NutritionScriptSave_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/viewlog"
        android:layout_marginBottom="10dp"/>

</LinearLayout>