<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uwm.diabetesapp.MainActivity"
    android:layout_weight="1">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BGL"
        android:layout_gravity="center_vertical"
        android:id="@+id/BGLbutton"
        android:textSize="20dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/opacity"
        android:textAllCaps="false"
        android:clickable="false"
        android:layout_weight="1"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutrition"
        android:height="30dp"
        android:id="@+id/Nutritionbutton"
        android:textSize="20dp"
        android:layout_below="@+id/BGLbutton"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:drawableLeft="@drawable/food_apple"
        android:textAllCaps="false"
        android:layout_weight="1"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitness"
        android:height="30dp"
        android:id="@+id/Fitnessbutton"
        android:textSize="20dp"
        android:layout_below="@+id/FitnessSave_btn"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:drawableLeft="@drawable/bike"
        android:textAllCaps="false"
        android:layout_weight="1"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medication"
        android:height="30dp"
        android:id="@+id/Medicationbutton"
        android:textSize="20dp"
        android:layout_below="@+id/Fitnessbutton"
        android:textAlignment="center"
        android:drawableLeft="@drawable/pill"
        android:textAllCaps="false"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:height="30dp"
        android:id="@+id/Statsbutton"
        android:textSize="20dp"
        android:layout_below="@+id/Medicationbutton"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_weight="1"/>
        <!--android:drawableLeft="@drawable/graph"-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Graph"
        android:id="@+id/graph_btn"
        android:height="30dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/chart"
        android:layout_weight="1"
        android:textAllCaps="false"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Events"
        android:textSize="16dp"
        android:id="@+id/input_events_button"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textAllCaps="false"
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Events"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/edit_events_button"/>
    </LinearLayout>


</LinearLayout>
