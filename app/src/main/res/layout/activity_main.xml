<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uwm.diabetesapp.MainActivity"
    android:weightSum="1">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BGL"
        android:id="@+id/BGLbutton"

        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/bgl"
        android:textAllCaps="false"
        android:clickable="false"
        android:layout_weight="1"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutrition"
        android:id="@+id/Nutritionbutton"

        android:textSize="30dp"
        android:layout_below="@+id/BGLbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:drawableLeft="@drawable/nutrition"
        android:textAllCaps="false"
        android:layout_weight="1"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitness"
        android:id="@+id/Fitnessbutton"

        android:textSize="30dp"
        android:layout_below="@+id/FitnessSave_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:drawableLeft="@drawable/fitness"
        android:textAllCaps="false"
        android:layout_weight="1"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medication"
        android:id="@+id/Medicationbutton"

        android:textSize="30dp"
        android:layout_below="@+id/Fitnessbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:drawableLeft="@drawable/meds"
        android:textAllCaps="false"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Graph Stats"
        android:id="@+id/Graphbutton"
        android:textSize="30dp"
        android:layout_below="@+id/Medicationbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_weight="1"/>
        <!--android:drawableLeft="@drawable/graph"-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Events"
        android:textSize="16dp"
        android:id="@+id/input_events_button"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textAllCaps="false"
        />
</LinearLayout>
