<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height= "match_parent"
    android:minWidth="500dp"
    android:minHeight="400dp"
    android:layout_gravity="center"
    tools:context="edu.uwm.diabetesapp.BGLEventFrag"
    android:background="@color/row_background">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/bgl_date_button"
        android:layout_gravity="center|center_vertical"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/bgl_time_button"
        android:layout_gravity="center|center_vertical"
        android:layout_marginRight="50dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="BGL"
        android:ems="10"
        android:id="@+id/bgl_field"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginBottom="75dp"/>

    <ImageButton
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:id="@+id/bgl_frag_save"
        android:src="@drawable/check_circle_outline"
        android:background="@color/row_background"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="75dp"/>

</FrameLayout>
