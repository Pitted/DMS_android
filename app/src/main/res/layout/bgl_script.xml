<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BGLScriptActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/checkBGL_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Check BGL"
        android:layout_gravity="center_horizontal"/>

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="5"
        android:orientation="vertical"
        android:useDefaultMargins="false">

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="From: "
                android:textSize="20sp"
                android:id="@+id/DateFrom_lbl"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center_vertical|right" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="Select Date"
                android:onClick="showDatePickerDialog"
                android:id="@+id/dateFrom_btn"
                android:layout_column="1"
                android:layout_row="0"
                android:textSize="20sp"
                android:minWidth="250dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="Select Time"
                android:onClick="showTimePickerDialog"
                android:id="@+id/timeFrom_btn"
                android:layout_column="1"
                android:layout_row="1"
                android:textSize="20sp"/>

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="To: "
                android:textSize="20sp"
                android:id="@+id/DateTo_lbl"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_gravity="center_vertical|right" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="Select Date"
                android:onClick="showDatePickerDialog"
                android:id="@+id/dateTo_btn"
                android:layout_column="1"
                android:layout_row="2"
                android:textSize="20sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="Select Time"
                android:onClick="showTimePickerDialog"
                android:id="@+id/timeTo_btn"
                android:layout_column="1"
                android:layout_row="3"
                android:textSize="20sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="Frequency"
                android:id="@+id/freq_btn"
                android:textSize="20sp"
                android:layout_column="1"
                android:layout_row="4"
                android:textAllCaps="false"/>
    </GridLayout>

    <Button
        android:id="@+id/BGLScriptSave_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:height="60dp"
        android:width="160dp"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:drawableLeft="@drawable/save"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/BGLScriptEdit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View/Edit"
        android:height="60dp"
        android:width="160dp"
        android:textSize="20dp"
        android:layout_below="@+id/BGLScriptSave_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/viewlog"
        android:layout_marginBottom="10dp"/>

</LinearLayout>